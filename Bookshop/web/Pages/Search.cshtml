@page
@model web.Pages.SearchModel
@{
}
<h3>Search @Model.Search</h3>
<table class="table table-dark">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th>Image</th>
            <th scope="col">Title</th>
            <th scope="col">Author</th>
            <th scope="col">Publisher</th>
            <th scope="col">Date</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var (index, book) in Model.Books.Select((value, i) => (i + 1, value)))
        {
            <tr>
                <td>@index</td>
                <td><img src="~/book.png" style="width: 50px; height: 50px;" /></td>
                <td><a class="bg-dark text-white list-group-item list-group-item-action" href="/Book/?id=@book.Id">@book.Title</a></td>
                <td>@book.Authors[0]</td>
                <td>@book.Publisher</td>
                <td>@book.PublicationDate</td>
            </tr>
        }
    </tbody>
</table>